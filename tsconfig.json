{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "." ,
    "paths": {
       "@/*": [
         "*"
       ],
       "@api/*": [
         "src/api/*"
       ],
       "@pages/*": [
         "src/pages/*"
       ],
       "@assets/*": [
         "src/assets/*"
       ],
       "@components/*": [
         "src/components/*"
       ],
       "@theme/*": [
         "src/theme/*"
       ],
       "@utils/*": [
         "src/utils/*"
       ]
    },
    "target": "esnext",
    "module": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
